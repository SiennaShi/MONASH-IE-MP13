<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="350dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="19dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <Switch
                android:id="@+id/home_switch_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="68dp"
                app:layout_constraintBottom_toTopOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_explore_hd"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="413dp"
                android:layout_height="244dp"
                android:src="@drawable/hooded_plover_home"
                app:layout_constraintBottom_toTopOf="@+id/btn_life_cycle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_switch_hp" />

            <Button
                android:id="@+id/btn_tag_1"
                android:layout_width="135dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:background="@drawable/shape_capsule"
                android:drawableStart="@drawable/ic_tag"
                android:fontFamily="monospace"
                android:text="@string/feather_color"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.15" />

            <Button
                android:id="@+id/btn_tag_2"
                android:layout_width="139dp"
                android:layout_height="24dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/shape_capsule"
                android:drawableStart="@drawable/ic_tag"
                android:fontFamily="monospace"
                android:text="@string/favorite_food"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="@+id/btn_tag_1"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.531" />

            <Button
                android:id="@+id/btn_tag_3"
                android:layout_width="108dp"
                android:layout_height="24dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/shape_capsule"
                android:drawableStart="@drawable/ic_tag"
                android:fontFamily="monospace"
                android:text="@string/nickname"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.777" />

            <Button
                android:id="@+id/btn_tag_4"
                android:layout_width="145dp"
                android:layout_height="24dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_capsule"
                android:drawableStart="@drawable/ic_tag"
                android:fontFamily="monospace"
                android:text="@string/feeding_period"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.901"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.81" />

            <Button
                android:id="@+id/btn_tag_5"
                android:layout_width="139dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_capsule"
                android:drawableStart="@drawable/ic_tag"
                android:fontFamily="monospace"
                android:text="@string/natural_enemy"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.472" />

            <Button
                android:id="@+id/btn_life_cycle"
                android:layout_width="276dp"
                android:layout_height="31dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/shape_capsule"
                android:backgroundTint="#D7BDE2"
                android:fontFamily="monospace"
                android:text="@string/view_life_cycle_of_hoody"
                android:textAllCaps="false"
                android:textColor="#FDFDFD"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/tv_explore_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="310dp"
                android:fontFamily="monospace"
                android:text="@string/explore_hooded_plover"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/tv_know_them"
                android:layout_width="361dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="75dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="monospace"
                android:text="@string/know_them_better"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.46"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_life_cycle"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="146dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="176dp"
                android:text="Button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_know_them" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
