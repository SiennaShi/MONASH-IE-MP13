<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout android:id="@+id/ll_bird"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="#90E0D0"
        android:layout_margin="55dp">
        <Button
            android:id="@+id/btn_tag_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tag_one"
            android:background="#F39C12"/>

        <Button
            android:id="@+id/btn_tag_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F39C12"
            android:text="tag_two" />


    </LinearLayout>
    <TextView
        android:id="@+id/tv_know_them"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Know Them Better"
        android:textColor="#F39C12"
        android:textSize="30sp"
        android:layout_marginLeft="55dp"/>
    <Button
        android:id="@+id/btn_fact_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="article 1"
        android:background="#F39C12"
        android:layout_marginLeft="50dp"/>

    <Button
        android:id="@+id/btn_fact_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F39C12"
        android:text="article 2"
        android:layout_marginLeft="50dp"/>

    <Button
        android:id="@+id/btn_fact_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F39C12"
        android:text="article 3"
        android:layout_marginLeft="50dp"/>

</LinearLayout>